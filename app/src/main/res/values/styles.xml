<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="normalRoundButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">ksh: 1000</item>
    </style>
    <style name="bigText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="smallText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">Esther Kanyangonda</item>
    </style>
    <style name="content" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">fjhgdfhghdfgiuhhfdgskhfgsduygkfuysgd</item>
    </style>
    <style name="font" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
    </style>
    <style name="font_light" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
    </style>
    <style name="small_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>
    <style name="big_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>
</resources>
